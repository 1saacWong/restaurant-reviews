{{#if addNewRestaurant}}
  <h1>New Rental</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="city">City</label>
        {{input value=city id="city"}}
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

       <div class="form-group">
        <label for="cost">Price</label>
        {{input value=cost id="cost"}}
      </div>

      <button  {{action 'saveRestaurant1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'restaurantFormShow'}}>New Restaurant</button>
{{/if}}
